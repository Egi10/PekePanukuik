<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Package_Simpan.Simpan_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hari"
                android:layout_below="@+id/textView2"
                android:hint="Tempat"
                android:background="@drawable/style_edittext"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/home"
                android:drawableTint="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_alignParentLeft="true"
                android:inputType="textNoSuggestions"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tanggal"
                android:layout_below="@+id/hari"
                android:hint="Tanggal"
                android:background="@drawable/style_edittext"
                android:drawablePadding="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:paddingBottom="1dp"
                android:drawableTint="#ffffff"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/calendar"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jam"
                android:hint="Jam Awal"
                android:drawablePadding="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:drawableTint="#ffffff"
                android:drawableLeft="@drawable/time"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@drawable/style_edittext"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jam_akhir"
                android:hint="Jam Akhir"
                android:drawablePadding="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:drawableTint="#ffffff"
                android:drawableLeft="@drawable/time"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@drawable/style_edittext"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pekerjaan"
                android:drawableLeft="@drawable/bag"
                android:drawablePadding="20dp"
                android:background="@drawable/style_edittext"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:drawableTint="#ffffff"
                android:paddingBottom="1dp"
                android:hint="Pekerjaan"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/jam"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIMPAN PEKERJAAN"
                android:id="@+id/simpan"
                android:background="#3F51B5"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/pekerjaan"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_alignParentLeft="true" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
