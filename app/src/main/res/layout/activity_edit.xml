<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditDANSimpan.Simpan_Activity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ethari"
            android:layout_below="@+id/textView2"
            android:hint="Tempat"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/home"
            android:drawablePadding="20dp"
            android:background="@drawable/style_edittext"
            android:layout_marginTop="45dp"
            android:paddingLeft="5dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ettanggal"
            android:layout_below="@+id/hari"
            android:hint="Tanggal"
            android:background="@drawable/style_edittext"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/calendar"
            android:drawablePadding="20dp"
            android:layout_marginTop="45dp"
            android:paddingLeft="5dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etjam"
            android:hint="Jam"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="20dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/style_edittext"
            android:paddingLeft="5dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etpekerjaan"
            android:hint="Pekerjaan"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/jam"
            android:drawableLeft="@drawable/bag"
            android:drawablePadding="20dp"
            android:background="@drawable/style_edittext"
            android:paddingLeft="5dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT PEKERJAAN"
            android:id="@+id/btnsimpan"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/pekerjaan"
            android:background="#3F51B5"
            android:textColor="#ffffff"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

</ScrollView>
